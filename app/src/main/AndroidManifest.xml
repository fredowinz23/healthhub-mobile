<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.capstone.healthhubnurse">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HealthHubNurse.NoActionBar"
        android:usesCleartextTraffic="true"
        tools:targetApi="m">
        <activity
            android:name="com.capstone.healthhubnurse.MainActivity"
            android:exported="false"
            android:label="@string/title_activity_nurse_main"
            android:theme="@style/Theme.HealthHubNurse.NoActionBar.NoActionBar" />
        <activity
            android:name="com.capstone.healthhubnurse.PatientListActivity"
            android:exported="false" />
        <activity
            android:name="com.capstone.healthhubnurse.PatientFormActivity"
            android:exported="false" />
        <activity
            android:name="com.capstone.healthhubnurse.auth.ChangePasswordActivity"
            android:exported="false" />
        <activity
            android:name="com.capstone.healthhubnurse.auth.LoginActivity"
            android:exported="false" />
        <activity
            android:name="com.capstone.healthhubnurse.debug.HostUrlActivity"
            android:exported="false" />
        <activity
            android:name="com.capstone.healthhubnurse.SplashScreenActivity"
            android:exported="true"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MedicalRecordsActivity" />
        <activity android:name=".MedicalRecordFormActivity" />
        <activity android:name=".MonitoringListActivity" />
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>